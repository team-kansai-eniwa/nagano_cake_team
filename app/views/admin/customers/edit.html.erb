<div class="container my-5">

<% if @customer.errors.any? %>
  <div class="alert alert-danger">
    <h6>以下のエラーがあります：</h6>
    <ul>
      <% @customer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h4 class="bg-light px-4 ml-3 d-inline-block"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>
  <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
    <table class="table mt-4 table-borderless" style="width: 60%;">
      <tr>
      <td style="width: 30%;">会員ID</td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %></td>
        <td><%= f.text_field :first_name, autocomplete: "first_name", class: "form-control" %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= f.text_field :last_name_kana, autocomplete: "last_name_kana", class: "form-control" %></td>
        <td><%= f.text_field :first_name_kana, autocomplete: "first_name_kana", class: "form-control" %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= f.text_field :postal_code, autocomplete: "postal_code", class: "form-control" %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td colspan="4"><%= f.text_field :address, autocomplete: "address", class: "form-control w-100" %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= f.text_field :telephone_number, autocomplete: "telephone_number", class: "form-control" %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= f.text_field :email, autocomplete: "email", class: "form-control" %></td>
      </tr>
      <tr>
        <td>会員ステータス</td>
        <td>
          <%= f.radio_button :is_active, true %> <%= f.label :is_active, "有効" %>
          <%= f.radio_button :is_active, false %> <%= f.label :is_active, "退会" %>
        </td>
      </tr>
      <tr>
        <td></td>
            <td><%= f.submit "変更を保存", class: "btn btn-success btn-lg", style: "border-radius: 8px;" %>
      </tr>
    </table>
    <% end %>
  </div>
