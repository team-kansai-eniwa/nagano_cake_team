<div class="container">
  <h5 class="bg-light px-4 ml-3 d-inline-block"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h5>
  <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
    <table>
      <tr>
        <td>会員ID</td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %></td>
        <td><%= f.text_field :first_name, autocomplete: "first_name", class: "form-control" %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= f.text_field :last_name_kana, autocomplete: "last_name_kana", class: "form-control" %></td>
        <td><%= f.text_field :first_name_kana, autocomplete: "first_name_kana", class: "form-control" %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= f.text_field :postal_code, autocomplete: "postal_code", class: "form-control" %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address, autocomplete: "address", class: "form-control" %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= f.text_field :telephone_number, autocomplete: "telephone_number", class: "form-control" %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= f.text_field :email, autocomplete: "email", class: "form-control" %></td>
      </tr>
      <tr>
        <td>会員ステータス</td>
        <td><!-- までできていない -->
        <%= f.text_field :is_active, autocomplete: "is_active", class: "form-control" %></td>
      </tr>
      <tr>
        <td></td>
            <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
      </tr>
    </table>
    <% end %>
  </div>