<div class="container my-5 px-4">
  <h5 class="bg-light px-4 ml-3 d-inline-block">ジャンル一覧・追加</h5>

  <div class="py-5">
    <%= form_with model: Genre.new, url: admin_genres_path, local: true do |f| %>
      <div class="d-flex mb-3" style="gap: 80px;">
        <%= f.label :name, "ジャンル名", class: "form-label" %>
        <%= f.text_field :name, placeholder: "ジャンル名", style: "width: 275px;" %>
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>

  <div style="float: left; width: 50%; padding-right: 20px;">
    <table class="table">
      <thead class="thead-light custom-bordered-thead">
        <tr>
          <th style="padding-left: 15%;">ジャンル</th>
          <th style="width: 30%;"></th>
        </tr>
      </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to '編集する', edit_admin_genre_path(genre), class: "btn btn-success" %>
        </tr>
      <% end %>
    </tbody>
    </table>
  </div>
  
</div>