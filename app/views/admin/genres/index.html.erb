<h2>ジャンル一覧</h2>
<ul>
  <% @genres.each do |genre| %>
    <li>
      <%= genre.name %>
      <%= link_to '編集', edit_admin_genre_path(genre) %>
    </li>
  <% end %>
</ul>

<h3>新規ジャンル追加</h3>
<%= form_with model: Genre.new, url: admin_genres_path, local: true do |f| %>
  <%= f.label :name, "ジャンル名" %>
  <%= f.text_field :name %>
  <%= f.submit "追加" %>
<% end %>