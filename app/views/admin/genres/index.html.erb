<!-- ジャンルの削除機能を一時実装中_View訂正時にRouteとControllerも訂正 -->

<div class="container my-5">
  <h4 class="admin-title">ジャンル一覧・追加</h4>

  <div class="py-5">
    <%= form_with model: Genre.new, url: admin_genres_path, local: true do |f| %>
      <div class="d-flex align-items-center mb-3" style="gap: 80px;">
        <%= f.label :name, "ジャンル名", class: "form-label" %>
        <%= f.text_field :name, placeholder: "ジャンル名", style: "width: 275px;" %>
        <%= f.submit "     新規登録     ", class: "btn btn-success", style: "border-radius: 8px;" %>
      </div>
    <% end %>
  </div>

  <div style="float: left; width: 50%; padding-right: 120px;">
    <table class="table">
      <thead class="thead-light custom-bordered-thead">
        <tr>
          <th style="padding-left: 10%; width: 50%;">ジャンル</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集する', edit_admin_genre_path(genre), class: "btn btn-success", style: "border-radius: 8px;" %></td>
            <td><%= link_to "削除", admin_genre_path(genre.id), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger", style: "border-radius: 8px;" %></td>
            </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
</div>