<div class="container mt-3 mb-5">

<!--  -->
  <div class="row">
    <div class="col-md-10 d-flex align-items-center justify-content-between">
      <h4 class="bg-light px-4 ml-3 d-inline-block">商品一覧</h4>
    </div>
    <div class="col-md-2">
      <%= link_to new_admin_item_path do %>
        <%= image_tag 'add_new_item.png', style: "width: 100px;" %>
      <% end %>
    </div>
  </div>

  <!-- ワイヤー図だと灰色の線はないが統一するためそうしていない（必要ならtable class内にtable-borderlessの追記） -->
  <table class="table mt-3">
    <thead class="thead-light custom-bordered-thead">
      <tr>
      <th style="width: 10%;">商品ID</th>
      <th style="width: 30%;">商品名</th>
      <th style="width: 10%;">税抜価格</th>
      <th style="width: 30%;">ジャンル</th>
      <th style="width: 20%;">ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><u><%= link_to item.name, admin_item_path(item), class: "text-dark" %></u></td>
          <td><%= number_to_currency(item.price, unit: "", precision: 0) %></td>
          <td><%= item.genre.name %></td>
          <td class="<%= item.is_active ? "text-success font-weight-bold" : "text-secondary font-weight-bold" %>">
            <%= item.is_active ? "販売中" : "販売停止中" %>
          </td>
        </tr>
      <% end %>

    </tbody>
  </table>
  <div class="d-flex justify-content-center mt-2">
    <%= paginate @items %>
  </div>
</div>