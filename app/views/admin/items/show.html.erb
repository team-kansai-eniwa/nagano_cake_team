<div class="container white-bg p-5">
  <h4 class="admin-title">商品詳細</h4>
  <div class="row mt-5">
    <div class="col-md-4">
      <%= image_tag url_for(@item.image), class: "img-thumbnail", style: "width: 300px; height: 200px; object-fit: cover;" %>
    </div>

    <div class="col-md-8 ex-admin-table">
      <table class="table" style="border: none;">
        <tr>
          <th style="width: 30%; border: none; font-weight: normal;">商品名</th>
          <td style="width: 70%; border: none; font-size: 1.2em;"><%= @item.name %></td>
        </tr>
        <tr>
          <th style="border: none; font-weight: normal;">商品説明</th>
          <td style="border: none; font-size: 1.2em;"><%= truncate(@item.introduction, length: 170) %></td>
        </tr>
        <tr>
          <th style="border: none; font-weight: normal;">ジャンル</th>
          <td style="border: none; font-size: 1.2em;"><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th style="border: none; font-weight: normal;">税込価格<br>(税抜価格)</th>
          <td style="border: none; font-size: 1.2em;"><%= number_to_currency(@item.price * 1.1, unit: "", delimiter: ",", precision: 0) %> (<%= number_to_currency(@item.price, unit: "", delimiter: ",", precision: 0) %>円)</td>
        </tr>
        <tr>
          <th style="border: none; font-weight: normal;">販売ステータス</th>
          <td style="border: none; font-size: 1.2em;">
            <div class="<%= @item.is_active ? 'text-success font-weight-bold' : 'text-secondary font-weight-bold' %>">
              <%= @item.is_active ? "販売中" : "販売停止中" %>
            </div>
          </td>
        </tr>
      </table>
    </div>
  </div>

  <div class="d-flex justify-content-center">
    <%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-success btn-lg", style: "border-radius: 8px;" %>
  </div>
</div>
