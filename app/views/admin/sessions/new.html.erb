<div class="container my-5">
  <div class="row justify-content-center">
    <div class="w-100" style="max-width: 800px;">
    <h4 class="admin-title">管理者ログイン</h4>

      <!-- エラーメッセージ -->
      <% if flash[:alert] %>
        <div class="alert alert-danger text-center">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row mb-3">
          <div class="col-md-3 text-end">
            <%= f.label :email, "メールアドレス" %>
          </div>
          <div class="col-md-9">
            <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-3 text-end">
            <%= f.label :password, "パスワード" %>
          </div>
          <div class="col-md-9">
            <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
          </div>
        </div>
        <div class="d-flex justify-content-center mt-3">
          <%= f.submit "ログイン", class:"btn btn-primary w-40" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
