<div class="container my-5">
  <h4 class="admin-title">注文履歴一覧</h4>
  <table class="table mt-4 admin-table table-borderless">
    <thead>
      <tr>
        <th style="width: 40%;">購入日時</th>
        <th style="width: 20%;">購入者</th>
        <th style="width: 20%;">注文個数</th>
        <th style="width: 20%;">注文ステータス</th>
      </tr>
    </thead>
    
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><u><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M'), admin_order_path(order), class: "text-dark" %></u></td>
          <td><%= "#{order.customer.last_name} #{order.customer.first_name}" %></td>
          <td><%= order.order_details.sum(&:amount) %></td>
          <td><%= order.status_i18n %></td> 
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="d-flex justify-content-center">
    <%= paginate @orders %>
  </div>
</div>




