<div class= "container">
  <h1>配送先登録/一覧</h1>

<%= form_with model: @address, url: addresses_path, method: :post do |f| %>

  <table class="table table-borderless">
  <tbody>
    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
  
  <!-- 郵便番号の欄 -->
  <tr>
    <td class="align-middle">郵便番号(ハイフンなし)</td>
    <td>
      <div class="align-middle">
        <%= f.text_field :postal_code, autocomplete: "postal_code", placeholder: "0000000", class: "form-control" %>
      </div>
    </td>
  </tr>
  
  <!-- 住所の欄 -->
  <tr>
    <td class="align-middle">住所</td>
    <td>
      <div class="align-middle">
        <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control" %>
      </div>
    </td>
  </tr>
  
  <!-- 宛名の欄 -->
  <tr>
    <td class="align-middle">宛名</td>
    <td>
      <div class="align-middle">
        <%= f.text_field :name, placeholder: "令和洋子", class: "form-control" %>
      </div>
    </td>
  </tr>
  
  </tbody>
  
  <!-- 新規登録ボタン -->
  <tfoot>
    <tr>
      <td></td>
      <td>
        <div  class="align-middle">
          <%= f.submit "新規登録", class: "btn btn-success w-50" %>
        </div>
      </td>
    </tr>
  </tfoot>
  </table>
  
  <% end %>
  </div>
  </div>


  
  <!-- 配送先一覧 -->
  <div class= "container">
  <table>
    <tr>
      <td>郵便番号</td>
      <td>住所</td>
      <td>宛名</td>
      <td><td>
    </tr>
    <tr>
    <% @addresses.each do |address| %>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td>
        <%= link_to "編集する", edit_address_path(address), class: "btn btn-primary w-30" %>
        <%= link_to "削除する", address_path(address), method: :delete, class: "btn btn-primary w-30" %>
      </td>
    <% end %>
    </tr>
    
  </table>
</div>
  