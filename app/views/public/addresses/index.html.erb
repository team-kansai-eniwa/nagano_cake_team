<div class="container white-bg p-5"> 
  <h4 class="customers-table">配送先登録/一覧</h4>
  <div class="row">
    <div class="col-12 ">
      <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
        <table class=" table table-borderless" style="width: 1000px">
          <!-- 郵便番号 -->
          <tr>
            <th class="align-middle">郵便番号(ハイフンなし)</th>
            <td>
              <%= f.text_field :postal_code, autocomplete: "postal_code", placeholder: "0000000", class: "form-control" %>
            </td>
          </tr>

          <!-- 住所 -->
          <tr>
            <th class="align-middle">住所</th>
            <td colspan="3">
              <%= f.text_field :address, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control" %>
            </td>
            <td><td>
          </tr>

          <!-- 宛名 -->
          <tr>
            <th class="align-middle">宛名</th>
            <td colspan="2">
              <%= f.text_field :address, autocomplete: "address", placeholder: "令和道子", class: "form-control" %>
            </td>
            <td style="width: 200px"></td>
            <td >
              <%= f.submit "新規登録", class: "btn btn-success", style: "width: 150px;" %>
            </td>
          </tr>
        </table>
      <% end %>
    </div>
    <div class="col-11 my-4">
      <!-- 配送先一覧 -->
      <table class="table table-bordered">
        <tr>
          <th class="bg-light">郵便番号</th>
          <th class="bg-light" >住所</th>
          <th class="bg-light">宛名</th>
          <th class="bg-light"></th>
        </tr>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td style="width: 250px">
                <div class="d-flex justify-content-center">
                  <%= link_to "編集する", edit_address_path(address), class: "btn btn-success px-3 mr-3" %>
                  <%= link_to "削除する", address_path(address), method: :delete, class: "btn btn-danger px-3 " %>
                </div>
              </td>
            </tr>
          <% end %>
      </table>
    </div>
  </div>
</div>







