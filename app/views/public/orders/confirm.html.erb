<div class="container mt-5">
  <div class="row">
    <div class="w-100">
      <h3>注文情報確認</h3>
    </div>
    <div class="col-8">
      <table class="table table-bordered">
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td> 
            <td><%= cart_item.tax_price %></td> 
            <td><%= cart_item.amount %></td>
            <td><%= number_with_delimiter(cart_item.subtotal) %></td>
          </tr>
        <% end %>
      </table>
      <h5>支払い方法</h5>
      <div class="ml-2">
        <%= @order.payment_method_i18n %>
      </div>

      <h5>お届け先</h5>
      <% if @num == 1 %>
        <div class="ml-2">
          〒<%= @order.postal_code + "　" + @order.address %><br>
          <%= current_customer.last_name + current_customer.first_name %>
        </div>
      <% else %>
        <div class="ml-2">
          〒<%= @order.postal_code + "　" + @order.address %><br>
          <%= @order.name %>
        </div>
      <% end %>
          

    </div>
    <div class="col-4">
      <div class="d-flex justify-content-end align-items-center ">
        <table class="table table-bordered mb-0", style="width: 250px;">
          <tr>
            <th>送料</th>
            <td><%= @postage %></td>
          </tr>
          <tr>
            <th>商品合計</th>
            <td>
                <%= number_with_delimiter(@total_price) %>
            </td>
          </tr>
          <tr>
            <th>請求金額</th>
            <td><%= number_with_delimiter(@total_price + @postage) %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
  <div class="text-center mt-5">
        <%= link_to "注文を確定する", orders_path, method: :post, class: 'btn btn-success ' %>
    </div>
</div>
