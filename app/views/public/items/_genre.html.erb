<table class="table table-borderless genre-box" >
  <tr class="text-center"style="height: 25px; font-size: 1.4rem;">
    <th class=" py-0" style="height: 25px;">ジャンル検索</th>
  </tr>
  <% genres.each do |genre| %>
    <tr>
      <td class="border-0 py-1">
      <%= link_to items_path(genre_id: genre.id), class: "btn btn-outline-dark px-3 py-1 w-100" do %>
        <%= genre.name %>
      <% end %>
    </td>
    </tr>
  <% end %>
</table>