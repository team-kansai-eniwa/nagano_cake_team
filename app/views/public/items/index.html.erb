<div class="container">
  <div class="row">
    <div class="col-md-2">
      <table class="table table-borderless " style="border: 1px solid black;">
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-10 px-5">
      <p><span class="h2">商品一覧</span>(全<%= @items_all.count %>件)</span></p>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-3">
            <div>
              <%= link_to item_path(item) do %>
                <%= image_tag url_for(item.image), class: "img-thumbnail", style: "width: 200px; height: 130px; object-fit: cover;" %>
              <% end %>
              <p><%= item.name %></p>
              <p><%= item.price %>円</p>
            </div>
          </div>
        <% end %>
      </div>
      <div class="d-flex justify-content-center">
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>
      