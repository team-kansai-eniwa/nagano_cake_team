<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-2">
      <table class="table table-borderless " style="border: 1px solid black;">
        <thead class="custom-bordered-thead">
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-4 px-5">
      <%= image_tag url_for(@item.image), class: "img-thumbnail", style: "width: 300px; height: 200px; object-fit: cover;" %>
    </div>

    <div class="col-md-6 px-5">
        <div>
          <h2><%= @item.name %></h2>
          <p class="my-5"><%= @item.introduction %></p>
          <p class="my-5"><span class="h4">￥<%= number_to_currency(@item.price * 1.1, unit: "", delimiter: ",", precision: 0) %></span>(税込)</p>
          <p class="my-5">個数選択/カートに入れる</p>
        </div>
    </div>
  </div>
</div>