<div class="container-fluid px-5 mx-5 m-4">
  <div class="row mx-5 px-5">
    <div class="col-md-2 mr-5">
      <%= render 'public/items/genre', genres: @genres %>
    </div>

    <div class="col-md-9 px-5">
        <p><span class="h2">「<%= @word %>」が含まれる商品</span>(全<%= @items.count %>件)</p>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-3">
            <div>
              <%= link_to item_path(item) do %>
                <%= image_tag url_for(item.image), class: "img-thumbnail", style: "width: 350px; height: 200px; object-fit: cover;" %>
              <% end %>
              <h5><%= item.name %></h5>
              <h5 class="mb-4">￥<%= number_with_delimiter(item.price) %></h5>
            </div>
          </div>
        <% end %>
      </div>
      <div class="d-flex justify-content-center mt-5">
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>
      