<div class="container"> 
  <div class="bg-light text-center ml-5" style="width: 200px"> 
    <h4 class="mb-4">会員情報編集</h4>
  </div>

  <div class="row">
    <div class="col-12" >
      <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
        <table class="table table-borderless" style="width: 800px;">
          <!-- 氏名 -->
          <tr>
            <td class="align-middle">
              <span>氏名</span>
            </td>
            <td class="align-middle">
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
            </td>
            <td class="align-middle">
              <div class="row align-items-center">
                <div class="col-12">
                  <%= f.text_field :first_name, autocomplete: "first_name", class: "form-control" %>
                </div>
              </div>
            </td>
          </tr>

          <!-- フリガナ -->
          <tr>
            <td class="align-middle">
              <span>フリガナ</span>
            </td>
            <td class="align-middle">
              <%= f.text_field :last_name_kana, autocomplete: "last_name_kana", class: "form-control" %>
            </td>
            <td class="align-middle">
              <div class="row align-items-center">
                <div class="col-12">
                  <%= f.text_field :first_name_kana, autocomplete: "first_name", class: "form-control" %>
                </div>
              </div>
            </td>
          </tr>

          <!-- 郵便番号 -->
          <tr>
            <td class="align-middle">郵便番号(ハイフンなし)</td>
            <td>
              <%= f.text_field :postal_code, autocomplete: "postal_code", class: "form-control" %>
            </td>
          </tr>

          <!-- 住所 -->
          <tr>
            <td class="align-middle">住所</td>
            <td colspan="3">
              <%= f.text_field :address, autocomplete: "address", class: "form-control" %>
            </td>
            <td></td>
          </tr>

          <!-- 電話番号 -->
          <tr>
            <td class="align-middle">電話番号(ハイフンなし)</td>
            <td>
              <%= f.text_field :telephone_number, autocomplete: "telephone_number", class: "form-control" %>
            </td>
          </tr>

          <!-- メールアドレス -->
          <tr>
            <td class="align-middle">メールアドレス</td>
            <td>
              <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
            </td>
          </tr>

          <!-- ボタン -->
          <tfoot>
            <tr>
              <td></td>
              <td>
                <%= f.submit "編集内容を保存", class: "btn btn-success w-100" %>
              </td>
              <td>
                <%= link_to "退会する", customers_withdraw_path, method: :patch, class: "btn btn-danger w-100" %>
              </td>
            </tr>
          </tfoot>
        </table>
      <% end %>
    </div>
  </div>
</div>