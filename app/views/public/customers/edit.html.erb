<h1>会員情報編集</h1>

<%= form_with model: @customer,url: customers_information_path, method: :patch do |f| %>

<table class="table table-borderless">
<tbody>
  <tr>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
  </tr>

<!-- 名前の欄  -->
  <tr>
    <td class="align-middle">名前</td>
    <td class="align-middle">
      <div class="row align-items-center">
        <div class="col-auto">
          <%= f.label :last_name, "(姓)" %>
        </div>
      <div class="col-auto">
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "令和", class: "form-control" %>
      </div>
    </div>
  </td>
  <td class="align-middle">
  <div class="row align-items-center">
    <div class="col-auto">
      <%= f.label :first_name, "(名)", class: "col-form-label mb-0" %>
    </div>
    <div class="col">
      <%= f.text_field :first_name, autocomplete: "first_name", placeholder: "道子", class: "form-control" %>
    </div>
  </div>
  </td>
</tr>

<!-- フリガナの欄 -->
<tr>
<td class="align-middle">フリガナ</td>

<td class="align-middle">
  <div class="row align-items-center">
    <div class="col-auto">
      <%= f.label :last_name_kana, "(セイ)", class: "col-form-label mb-0" %>
    </div>
    <div class="col">
      <%= f.text_field :last_name_kana, autocomplete: "last_name_kana", placeholder: "レイワ", class: "form-control" %>
    </div>
  </div>
</td>

<td class="align-middle">
  <div class="row align-items-center">
    <div class="col-auto">
      <%= f.label :first_name_kana, "(メイ)", class: "col-form-label mb-0" %>
    </div>
    <div class="col">
      <%= f.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder: "ミチコ", class: "form-control" %>
    </div>
  </div>
</td>
</tr>

<!-- メールアドレスの欄 -->
<tr>
  <td class="align-middle">メールアドレス</td>
  <td >
    <div class="align-middle">
      <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
    </div>
  </td>
</tr>

<!-- 郵便番号の欄 -->
<tr>
  <td class="align-middle">郵便番号(ハイフンなし)</td>
  <td>
    <div class="align-middle">
      <%= f.text_field :postal_code, autocomplete: "postal_code", placeholder: "0000000", class: "form-control" %>
    </div>
  </td>
</tr>

<!-- 住所の欄 -->
<tr>
  <td class="align-middle">住所</td>
  <td>
    <div class="align-middle">
      <%= f.text_field :address, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control" %>
    </div>
  </td>
</tr>

<!-- 電話番号の欄 -->
<tr>
  <td class="align-middle">電話番号(ハイフンなし)</td>
  <td>
    <div class="align-middle">
      <%= f.text_field :telephone_number, autocomplete: "telephone_number", placeholder: "0000000000", class: "form-control" %>
    </div>
  </td>
</tr>

<!--パスワードの欄 -->
<tr>
  <td class="align-middle">パスワード(6文字以上)</td>
  <td>
    <div class="align-middle">
      <% if @minimum_password_length %>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>
  </td>
</tr>

<!-- 確認用のパスワードの欄 -->
<tr>
  <td class="align-middle">パスワード(確認用)</td>
  <td>
    <div class="align-middle">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
  </td>
</tr>
</tbody>

<!-- 新規登録ボタン -->
<tfoot>
  <tr>
    <td></td>
    <td>
      <div  class="align-middle">
        <%= f.submit "編集内容を保存", class: "btn btn-success w-50" %>
      </div>
    </td>


<!-- 退会ボタン -->
    <td>
      <%= link_to "退会する", customers_withdraw_path, method: :patch, class: "btn btn-danger" %>
    </td>
  </tr>
</tfoot>
</table>
<% end %>


</div>

