<div class="container">
  <div class="row ml-5 pl-5">
    <div class="col-8">
      <div class="bg-light text-center ml-5" style="width: 200px"> 
        <h4 class="mb-5 ">マイページ</h4>
      </div>
      
      <table class=" table-borderless my-4">
        <tr>
          <td><h5 class="mr-4">登録情報</h5></td>
          <td><%= link_to "編集する", customers_information_edit_path, class: "btn btn-success py-0 px-4" %></td>
        </tr>
      </table>
      <table class="table table-bordered">
        <tr>
          <th class="bg-light" style="width: 200px;" >氏名</th>
          <td><%= @customer.last_name %>  <%= @customer.first_name %></td>
        </tr>
        <tr>
          <th class="bg-light" style="width: 200px;" >カナ</th>
          <td><%= @customer.last_name_kana %>  <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th class="bg-light" style="width: 200px;">郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th class="bg-light" style="width: 200px;" >住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th class="bg-light" style="width: 200px;">電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th class="bg-light" style="width: 200px;">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
      <div class="col-6">
      </div>
    </div>
    <div class="col-12">
      <table class=" table-borderless my-4">
        <tr>
          <td><h5 class="mr-4 ">配送先</h5></td>
          <td><%= link_to "一覧を見る", addresses_path, class: "btn btn-primary py-0 px-4" %></td>
        </tr>
        <tr>
          <td><h5 class="mr-4 ">注文履歴</h5></td>
          <td><%= link_to "一覧を見る", orders_path, class: "btn btn-primary py-0 px-4" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>

